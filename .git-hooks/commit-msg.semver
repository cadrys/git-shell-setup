#!/bin/sh

# Check if semver line is included
checkSemver() {
	echo " -check if semver line is included"
	msg="$1"
	# '#' cannot be the 1st char
	if ! egrep -q "^[^#].*#(MAJOR|MINOR|PATCH)" "$msg"; then
		echo -e "  ${Yellow}WARNING:${None} #MAJOR | #MINOR | #PATCH line is NOT included"
	fi
}

checkSemver "$1"
