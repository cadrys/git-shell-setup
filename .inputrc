$include /etc/inputrc

# ctrl-right
"\e[1;5C": forward-word
# option-right
"\e\e[C": forward-word
# ctrl-left
"\e[1;5D": backward-word
# option-left:
"\e\e[D": backward-word

# delete
"\e[3~": delete-char
# ctrl-delete
"\e[3;5~": shell-kill-word
# alt-delete
"\e[3;3~": shell-kill-word
# ctrl-backspace (check Backarrow sends ^H)
"\C-?": unix-word-rubout

set completion-ignore-case on
