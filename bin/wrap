#!/bin/sh

#usage:
#   ... | wrap \"
#   ... | wrap \'
#   ... | wrap \(
#   ... | wrap \( \)
#
# Wrap text with args.

start=${1}
end=${2-"$start"}
while IFS= read -r line; do
	# exec echo does not work
	echo "$start""$line""$end"
done
if [ -n "$line" ]; then
	# exec echo does not work
	echo "$start""$line""$end"
fi
