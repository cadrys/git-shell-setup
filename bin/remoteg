#!/bin/sh

#usage: remoteg
#
# Browse to gerrit remote's url.

if [[ "$1" == "-h" ]]; then print-file-comments "$0"; exit; fi

GerritUrlQuery="$GerritUrl/#/q/"
git config --get-regex remote\..*\.url \
	| cut -d' ' -f2 \
	| sed 's,^ssh://,,' \
	| xargs basename \
	| sed 's,^,'"$GerritUrlQuery"'project:,' \
	| xargs start chrome --new-window
